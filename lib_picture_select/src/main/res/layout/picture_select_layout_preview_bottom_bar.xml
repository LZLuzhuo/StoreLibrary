<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/picture_select_preview_bottom_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/picture_select_preview_center_list"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/picture_select_bottom_bar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/picture_select_preview_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:padding="12dp"
            android:text="编辑"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:visibility="invisible"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/picture_select_preview_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:button="@drawable/picture_select_checkbox_original"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:text="原图"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:visibility="invisible"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/picture_select_preview_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:button="@drawable/picture_select_preview_checkbox_selector"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:text="选择"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:visibility="visible"
            tools:visibility="visible" />
    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
