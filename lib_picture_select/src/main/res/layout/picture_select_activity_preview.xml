<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/picture_select_preview_center">

    <me.luzhuo.lib_picture_select.HackyViewPager
        android:id="@+id/picture_select_preview_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <me.luzhuo.lib_picture_select.ui.PictureSelectPreviewHeaderBar
        android:id="@+id/picture_select_preview_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <me.luzhuo.lib_picture_select.ui.PictureSelectPreviewBottomBar
        android:id="@+id/picture_select_preview_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</FrameLayout>